<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('assets/bootstrap2/docs/assets/css/bootstrap.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/wurstpresscore/css/wurstpress.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/wurstpresscore/css/dropzone.css') }}"/>

    <!--[if lt IE 9]>
    <script src="{{ asset('assets/html5shiv/dist/html5shiv.min.js') }}"></script>
    <script src="{{ asset('assets/respond/dest/respond.min.js') }}"></script>
    <![endif]-->

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

    {% render url('wurstpress_navigation') %}

    <div class="container-fluid">
        <div class="row-fluid">

            <div class="span2">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Blog</li>
                        <li><a href="{{ path('wurstpress_post') }}">Posts</a></li>
                        <li class="nav-header">Assets</li>
                        <li><a href="{{ path('wurstpress_collection') }}">Collections</a></li>
                        <li><a href="{{ path('wurstpress_document') }}">Documents</a></li>
                        {#<li><a href="#">Pages</a></li>#}
                        {#<li><a href="#">Comments</a></li>#}
                        <li class="nav-header">CMS</li>
                        <li><a href="{{ path('cms_user') }}">Users</a></li>
                        <li><a href="{{ path('cms_account') }}">Accounts</a></li>
                        <li><a href="{{ path('cms_advert') }}">Adverts</a></li>
                    </ul>
                </div><!--/.well -->
            </div>

            {% block body %}{% endblock %}

        </div>
    </div>

{% javascripts
    '@WurstpressCoreBundle/Resources/assets/generic/js/jquery.js'
    '@WurstpressCoreBundle/Resources/assets/twitter-bootstrap/js/bootstrap.js'
    '@WurstpressCoreBundle/Resources/public/js/dropzone.js'
    '@WurstpressCoreBundle/Resources/public/js/upload.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>
