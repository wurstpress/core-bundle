{% extends 'WurstpressCoreBundle::layout.html.twig' %}

{% block body -%}

    <div class="span10">

        <h1>Post creation</h1>

        <form action="{{ path('post_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_widget(form) }}
            <p>
                <button type="submit" class="btn btn-primary">Create</button>
            </p>
        </form>

        <ul class="inline">
            <li>
                <a href="{{ path('post') }}" class="btn">Back to the list</a>
            </li>
        </ul>
    </div>
{% endblock %}
