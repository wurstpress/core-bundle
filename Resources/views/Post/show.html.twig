{% extends 'WurstpressCoreBundle::layout.html.twig' %}

{% block body -%}
    <div class="span10">


        <h1>Post</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>{{ 'post.title.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{{ 'post.content.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{{ entity.content|raw }}</td>
            </tr>
            <tr>
                <th>{{ 'post.tags.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{% for tag in entity.tags %}{{ tag }},{% endfor %}</td>
            </tr>
            <tr>
                <th>{{ 'post.collection.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{{ entity.collection }}</td>
            </tr>
            <tr>
                <th>{{ 'post.slug.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>{{ 'post.created.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{{ 'post.updated.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
            </tbody>
        </table>

        <ul class="inline">
            <li>
                <a href="{{ path('wurstpress_post') }}" class="btn">{{ 'post.back_to_list.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</a>
            </li>
            <li>
                <a href="{{ path('wurstpress_post_edit', { 'id': entity.id }) }}" class="btn btn-success">{{ 'post.edit.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</a>
            </li>
            <li>
                <form action="{{ path('wurstpress_post_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE"/>
                    {{ form_widget(delete_form) }}
                    <button type="submit" class="btn btn-danger">{{ 'post.delete.label'|trans({}, 'WurstpressCoreBundle')|capitalize }}</button>
                </form>
            </li>
        </ul>
    </div>
{% endblock %}
